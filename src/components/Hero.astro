---
import { Image } from "astro:assets";
import logoBienvenido from "../assets/logoBienvenido.png";
import logoHero from "../assets/logoHero.png";

import video1 from "/videos/01.mp4";
import video2 from "/videos/02.mp4";
import video3 from "/videos/03.mp4";
import video4 from "/videos/04.mp4";
import video5 from "/videos/05.mp4";

import video6 from "/videos/CoberturaRiesgos.mp4";
import video7 from "/videos/gestionRiesgo.mp4";

import VideoSequencer from "./VideoSequencer";

const videoList = [
  {
    src: video1,
  },
  {
    src: video2,
  },
  {
    src: video3,
  },
  {
    src: video4,
  },
  {
    src: video5,
  },
  {
    src: video6,
  },
  {
    src: video7,
  },
];
const { lang } = Astro.props;
const translations = await import(`../i18n/locales/${lang}/translation.json`);
---

<div>
  <div class="videoContainer">
    <VideoSequencer videos={videoList} client:load />
    <div class="tituloContainer">
      <Image src={logoHero} alt="logo" width={1000} class="logoHero" />
    </div>
  </div>

  <div class="heroContent">
    <h2>{translations.hero_titulo}</h2>
  </div>

  <div class="asesoramientosContainer">
    <h3>{translations.hero_subtitulo} | {translations.hero_slogan}</h3>

    <h2 class="and">&</h2>
    <div class="finanzas">
      <a href={`/${lang}/finanzas/Finanzas`}>{translations.navbar_inicio}</a>
    </div>
    <div class="agronegocios">
      <a href={`/${lang}/agronegocios/Agronegocios`}
        >{translations.hero_agronegocios}</a
      >
    </div>
  </div>

  <div class="bienvenido">
    <div class="logoBienvenidoContainer">
      <Image
        src={logoBienvenido}
        alt="logo"
        width={1000}
        class="logoBienvenido"
      />
    </div>
    <div class="bienvenidoText">
      <h3>{translations.hero_bienvenido}</h3>
      <p>
        {translations.hero_bienvenido_desc}
      </p>
    </div>
  </div>
</div>

<style>
  .videoContainer {
    position: relative;
    height: 50dvh;
    background-color: rgb(0, 0, 0);
    padding: 20px 50px;
    box-sizing: border-box;
  }
  .tituloContainer {
    pointer-events: none;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    background-color: rgba(0, 0, 0, 0.153);

    width: 100%;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -40%);
  }
  .tituloContainer .logoHero {
    margin: 0px;
    margin-bottom: 0px;

    width: 50%;
    height: 50%;
    object-fit: contain;
  }
  .heroContent {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgb(0, 0, 0);
    color: white;
    border-top: 3px solid white;
  }
  .heroContent h2 {
    z-index: 2;
    font-size: 1.6rem;
    padding: 15px 0px;
    padding-bottom: 10px;
    margin: 0px;
    margin-bottom: 5px;
    font-family: "NotoSansRegular", sans-serif;
    font-weight: 400;
  }
  .asesoramientosContainer {
    border-top: 3px solid white;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 320px;
  }
  .asesoramientosContainer h4 {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, 3%);
    font-size: 1.1rem;
    padding: 0px;
    margin: 0px;
    color: white;

    height: 105%;
    width: 100%;

    display: flex;
    justify-content: center;
    align-items: flex-start;
    pointer-events: none;

    font-family: "NotoSansRegular", sans-serif;
    font-weight: 400;
  }
  .asesoramientosContainer h3 {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -5%);
    font-size: 1rem;
    padding: 0px;
    margin: 0px;
    color: white;
    background-image: radial-gradient(
      circle at center top,
      rgb(0, 0, 0) 25%,
      rgba(255, 255, 255, 0) 95%
    );
    height: 105%;
    width: 100%;

    display: flex;
    justify-content: center;
    align-items: flex-start;
    pointer-events: none;

    font-family: "NotoSansRegular", sans-serif;
    font-weight: 400;
  }
  .and {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -170%);
    color: white;
    font-size: 5rem;
    font-family: "NotoSerifRegular", serif;
    font-weight: 400;
  }
  .finanzas {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 100%;

    background-image: url("../assets/finanzas.jpg");
    background-position: top;
    background-size: cover;
  }
  .finanzas a {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    color: rgb(255, 255, 255);
    width: 200px;
    height: 50px;
    background-color: rgba(255, 255, 255, 0);
    border: solid 4px white;
    border-radius: 35px;
    text-decoration: none;
    font-size: 1.2rem;
    z-index: 1;
    margin-bottom: 120px;
  }
  .agronegocios {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 100%;

    background-image: url("../assets/farm.jpg");
    background-position: bottom;
    background-size: cover;
  }
  .agronegocios a {
    display: flex;
    justify-content: center;
    align-items: center;
    list-style: none;
    color: rgb(255, 255, 255);
    width: 200px;
    height: 50px;
    background-color: rgba(255, 255, 255, 0);
    border: solid 4px white;
    border-radius: 35px;
    text-decoration: none;
    font-size: 1.2rem;
    z-index: 1;
    margin-bottom: 120px;
  }
  .bienvenido {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 350px;
  }

  .logoBienvenidoContainer {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    width: 270px;
    height: 270px;
  }
  .logoBienvenido {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .bienvenidoText {
    padding-left: 30px;
    width: 50%;
  }
  .bienvenidoText h3 {
    font-size: 2.3rem;
    width: 100%;
    margin: 0px;
    margin-bottom: 50px;
    font-family: "NotoSerifRegular", serif;
    font-weight: 400;
  }
  .bienvenidoText p {
    font-size: 0.9rem;
    line-height: 1.7;
    width: 100%;
    font-family: "NotoSansRegular", sans-serif;
    font-weight: 400;
  }

  @media screen and (max-width: 1052px) {
    .videoContainer {
      position: relative;
      height: 500px;
      background-color: rgb(0, 0, 0);
      padding: 50px 50px;
      box-sizing: border-box;
    }
    .heroContent h2 {
      font-size: 1.8rem;
    }
    .asesoramientosContainer h3 {
      font-size: 1rem;
    }
    .asesoramientosContainer h4 {
      font-size: 1rem;
    }
    .and {
      font-size: 3rem;
    }
    .agronegocios a {
      font-size: 1rem;
      width: 170px;
      height: 40px;
    }
    .finanzas a {
      width: 170px;
      height: 40px;
      font-size: 1rem;
    }
    .bienvenidoText h3 {
      margin-bottom: 20px;
      font-size: 1.6rem;
    }
    .bienvenidoText P {
      font-size: 0.8rem;
    }
    .logoBienvenidoContainer {
      width: 200px;
      height: 200px;
    }
    .tituloContainer .logoHero {
      margin: 0px;
      margin-bottom: 30px;
    }
  }
  @media screen and (max-width: 768px) {
    .videoContainer {
      height: 350px;
    }
    .heroContent h2 {
      font-size: 1rem;
    }
    .asesoramientosContainer {
      height: 180px;
    }
    .asesoramientosContainer h3 {
      font-size: 0.6rem;
    }
    .asesoramientosContainer h4 {
      font-size: 0.6rem;
    }
    .bienvenido {
      padding: 25px 0px;
      height: fit-content;
    }
    .logoBienvenidoContainer {
      width: 150px;
      height: 150px;
    }
    .bienvenidoText h3 {
      font-size: 1rem;
    }
    .bienvenidoText p {
      font-size: 0.5rem;
    }
    .and {
      font-size: 2rem;
    }
    .agronegocios a {
      font-size: 0.7rem;
      width: 120px;
      height: 30px;
    }
    .finanzas a {
      width: 120px;
      height: 30px;
      font-size: 0.7rem;
    }
  }
</style>
