---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

import group from "../../assets/group.png";
import vision from "../../assets/vision.png";
import fortaleza from "../../assets/fortaleza.png";

import expertise from "../../assets/expertise.png";
import experiencia from "../../assets/experiencia.png";
import valores from "../../assets/valores.png";
import vision2 from "../../assets/visionIcon.png";
import { FaRegCheckCircle } from "react-icons/fa";

import icon1 from "../../assets/fortalezas/download.png";
import icon2 from "../../assets/fortalezas/download-1.png";
import icon3 from "../../assets/fortalezas/download-2.png";
import icon4 from "../../assets/fortalezas/download-3.png";
import icon5 from "../../assets/fortalezas/download-4.png";
import icon6 from "../../assets/fortalezas/download-5.png";
import icon7 from "../../assets/fortalezas/download-6.png";

export async function getStaticPaths() {
  return [{ params: { lang: "es" } }, { params: { lang: "en" } }];
}

const { lang } = Astro.params;
const translations = await import(
  `../../i18n/locales/${lang}/translation.json`
);

const items = [
  {
    title: translations.oferta_titulo,
    icon: icon1,
    description: translations.oferta_text,
  },
  {
    title: translations.personalizado_titulo,
    icon: icon4,
    description: translations.personalizado_text,
  },
  {
    title: translations.evitar_titulo,
    icon: icon2,
    description: translations.evitar_text,
  },
  {
    title: translations.trasparencia_titulo,
    icon: icon5,
    description: translations.trasparencia_text,
  },
  {
    title: translations.independencia_titulo,
    icon: icon6,
    description: translations.independencia_text,
  },
  {
    title: translations.discrecion_titulo,
    icon: icon3,
    description: translations.discrecion_text,
  },
  {
    title: translations.flexibilidad_titulo,
    icon: icon7,
    description: translations.flexibilidad_text,
  },
];
---

<Layout>
  <div class="servicio nosotros">
    <div class="icon">
      <Image src={group} alt="logo" width={1000} class="iconNosotros" />
    </div>
    <div class="servicioText">
      <h2>{translations.nosotros_titulo}</h2>
    </div>
  </div>

  <div class="expertise">
    <div class="expertiseContainer">
      <h3>EXPERTISE</h3>
      <div class="expertiseContent">
        <div class="expertiseText">
          <ul>
            <li>
              <FaRegCheckCircle />
              <p>
                {translations.nosotros_expertise_text}
              </p>
            </li>
          </ul>
        </div>

        <div class="expertiseImage">
          <Image
            src={expertise}
            alt="logo"
            width={1000}
            class="iconExpertise"
          />
        </div>
      </div>
    </div>
    <div class="experiencia">
      <div class="experienciaImage">
        <Image
          src={experiencia}
          alt="logo"
          width={1000}
          class="iconExperiencia"
        />
      </div>
      <div class="experienciaText">
        <h3>{translations.nosotros_experiencia_titulo}</h3>
        <ul>
          <li>
            <FaRegCheckCircle />
            <p>
              {translations.nosotros_experiencia_text}
            </p>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="servicio visionValores">
    <div class="icon">
      <Image src={vision} alt="logo" width={1000} class="iconNosotros" />
    </div>
    <div class="servicioText">
      <h2>{translations.valores_titulo}</h2>
    </div>
  </div>

  <div class="vision">
    <div class="visionContainer">
      <div class="visionContent">
        <div class="visionText">
          <h3>{translations.vision_titulo}</h3>
          <ul>
            <li>
              <FaRegCheckCircle />
              <p>
                {translations.vision_text}
              </p>
            </li>
          </ul>
        </div>

        <div class="visionImage">
          <Image src={vision2} alt="logo" width={1000} class="iconVision" />
        </div>
      </div>
    </div>
    <div class="valores">
      <div class="valoresImage">
        <Image src={valores} alt="logo" width={1000} class="iconValores" />
      </div>
      <div class="valoresText">
        <h3>{translations.valores2_titulo}</h3>
        <ul>
          <li>
            <FaRegCheckCircle />
            <p>
              {translations.valores2_text}
            </p>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="servicio fortaleza">
    <div class="icon">
      <Image src={fortaleza} alt="logo" width={1000} class="iconNosotros" />
    </div>
    <div class="servicioText">
      <h2>{translations.fortalezas_titulo}</h2>
    </div>
  </div>
  <section class="itemsWrapper">
    <div class="itemsContainer">
      {
        items.map((item) => (
          <div class="item">
            <div class="iconContainer">
              <div class="iconItem">
                <Image
                  src={item.icon}
                  alt="logo"
                  width={1000}
                  class="logoItem"
                />
              </div>
            </div>
            <div class="textItem">
              <h2>{item.title}</h2>
              <ul>
                {item.description
                  .split(".")
                  .filter((p) => p.trim() !== "")
                  .map((p) => (
                    <li>
                      {" "}
                      <FaRegCheckCircle />
                      <p>{p.trim()}.</p>
                    </li>
                  ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .nosotros {
    border-bottom: 4px solid white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 350px;
    background-size: cover;
    background-position: 50% 20%;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    padding-right: 250px;
    background-image:
      linear-gradient(to right, rgba(0, 0, 0, 0.989) 25%, rgba(0, 0, 0, 0)),
      url(../../assets/work.jpg);
  }
  .visionValores {
    border-top: 4px solid white;
    border-bottom: 4px solid white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 350px;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    filter: grayscale(100%);
