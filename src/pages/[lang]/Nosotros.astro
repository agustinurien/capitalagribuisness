    width: 70%;
    height: 45%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }
  .visionText h3 {
    font-family: "NotoSerifBold", serif;
    font-weight: 700;
    font-style: normal;
    font-size: 1.7rem;
    margin: 0px;
    padding: 0px;
    color: rgb(0, 0, 0);
    background-color: rgb(255, 255, 255);
    width: 100%;
    border-radius: 30px;
    padding: 10px 30px;
    box-sizing: border-box;
  }
  .visionContent {
    width: 100%;
    height: 100%;
    display: flex;
  }
  .visionText {
    color: white;
    width: 50%;
  }
  .vision ul {
    padding-top: 20px;
    padding-left: 10px;
    margin: 0px;
  }
  .vision li {
    display: flex;
    gap: 10px;
    margin: 0px;
    padding-bottom: 10px;
  }
  .vision li p {
    width: 90%;
    margin: 0px;
    font-size: 1.3rem;
  }
  .visionImage {
    width: 50%;
    height: 80%;
  }
  .visionImage .iconVision {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .valores {
    width: 70%;
    height: 55%;

    display: flex;
  }
