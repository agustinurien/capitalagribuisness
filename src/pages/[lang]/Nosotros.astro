      linear-gradient(to right, rgba(0, 0, 0, 0.989) 25%, rgba(0, 0, 0, 0)),
      url(../../assets/sticky.jpg);
  }
  .fortaleza {
    border-top: 4px solid white;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 350px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: grayscale(100%);
    padding-right: 250px;
    background-image:
      linear-gradient(to right, rgba(0, 0, 0, 0.989) 25%, rgba(0, 0, 0, 0)),
      url(../../assets/fort.png);
  }
  .icon {
    padding-right: 70px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 180px;
    height: 180px;
    color: white;
  }
  .iconNosotros {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .servicioText {
    padding-left: 30px;
    width: 40%;
  }
  .servicioText h2 {
    font-size: 3.5rem;
    margin: 0px;
    color: white;
    font-family: "NotoSerifRegular", serif;
    font-weight: 400;
  }

  .expertise {
    background:
      radial-gradient(at top left, #010101, transparent 45%),
      radial-gradient(at bottom right, #010101, transparent 35%), #404041;
    background-repeat: no-repeat;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 750px;
    padding-bottom: 70px;
    padding-top: 70px;
  }
  .expertiseContainer {
    width: 70%;
    height: 70%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }
  .expertiseContainer h3 {
    font-family: "NotoSerifBold", serif;
    font-weight: 700;
    font-style: normal;
    font-size: 1.7rem;
    margin: 0px;
    padding: 0px;
    color: rgb(0, 0, 0);
    background-color: rgb(255, 255, 255);
    width: 100%;
    border-radius: 30px;
    padding: 10px 30px;
    box-sizing: border-box;
  }
  .expertiseContent {
    width: 100%;
    height: 100%;
    display: flex;
  }
  .expertiseText {
    color: white;
    width: 50%;
  }
  .expertiseText ul {
    padding-top: 20px;
    padding-left: 10px;
    margin: 0px;
  }
  .expertiseText li {
    display: flex;
    gap: 10px;
    margin: 0px;
    padding-bottom: 10px;
  }
  .expertiseText li p {
    width: 90%;
    margin: 0px;
    font-size: 1.3rem;
  }

  .expertiseImage {
    width: 50%;
    height: 400px;

    display: flex;
    justify-content: center;
    align-items: center;
  }
  .expertiseImage .iconExpertise {
    width: 90%;
    height: 90%;
    object-fit: contain;
  }

  .experiencia {
    width: 70%;
    height: 30%;

    display: flex;
  }
  .experienciaText {
    color: white;
    width: 50%;
  }
  .experienciaText h3 {
    font-family: "NotoSerifBold", serif;
    font-weight: 700;
    font-style: normal;
    font-size: 1.7rem;
    margin: 0px;
    padding: 0px;
    color: rgb(0, 0, 0);
    background-color: rgb(255, 255, 255);
    width: 100%;
    border-radius: 30px;
    padding: 10px 30px;
    box-sizing: border-box;
  }
