    margin: 0px;
    width: 85%;
    font-size: 1.1rem;
  }
  @media screen and (max-width: 1250px) {
    .itemsContainer {
      height: fit-content;
    }
  }
  @media screen and (max-width: 768px) {
    .expertiseContainer {
      width: 90%;
    }
    .expertiseContent {
      flex-direction: column;
    }
    .expertiseText {
      width: 100%;
    }
    .expertiseImage {
      width: 100%;
      height: 170px;
    }

    li p {
      font-size: 0.9rem;
    }

    .experiencia {
      width: 90%;
    }
    .experienciaText {
      width: 100%;
    }
    .experiencia h3 {
      font-size: 1.5rem;
    }
    .vision {
      height: fit-content;
    }
    .visionContainer {
      width: 90%;
    }
    .visionContent {
      flex-direction: column;
    }
    .visionText {
      width: 100%;
    }
    .visionImage {
      width: 100%;
      height: 130px;
    }
    .visionText h3 {
      padding: 10px;
      font-size: 1rem;
    }

    .valores {
      flex-direction: column-reverse;
      width: 90%;
    }
    .valoresText {
      width: 100%;
      padding-top: 20px;
    }
    .valoresText h3 {
      padding: 10px;
      font-size: 1rem;
    }
    .valoresText p {
      font-size: 0.8rem;
    }
    .valoresImage {
      width: 100%;
      height: 130px;
    }
    .nosotros {
      padding-left: 20px;
      padding-right: 0px;
    }
    .visionValores {
      padding-left: 20px;
      padding-right: 0px;
    }
    .fortaleza {
      padding-left: 20px;
      padding-right: 0px;
    }
    .servicio h2 {
      font-size: 2.1rem;
    }
    .servicioText {
      width: 100%;
    }

    .icon {
      padding-right: 0px;
    }
    .item {
      width: 90%;
      height: fit-content;
      padding: 20px 0px;
      display: flex;
      flex-direction: column;
    }
  }
</style>
