  }
  .valoresText li p {
    width: 90%;
    margin: 0px;
  }
  .valoresImage {
    width: 50%;
    height: 80%;
  }
  .valoresImage .iconValores {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .itemsWrapper {
    border-top: 4px solid white;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background:
      radial-gradient(at top left, #010101, transparent 45%),
      radial-gradient(at bottom right, #010101, transparent 35%), #404041;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    box-sizing: border-box;
  }
  .itemsContainer {
    padding: 120px 0px;
    gap: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    width: fit-content;
    height: 220vh;
  }
  .item {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 500px;
    height: fit-content;
    background-color: rgb(255, 255, 255);
    border: 2px solid black;
    border-radius: 20px;
    box-sizing: border-box;
    padding: 20px 0px;
  }
  .iconContainer {
    width: 160px;
    padding: 20px 0px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .iconItem {
    width: 80%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .logoItem {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .item .textItem {
    border-top: 3px solid black;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 20px;
    width: 100%;
    padding-left: 20px;
    padding-top: 30px;
    box-sizing: border-box;
  }
  .item .textItem h2 {
    margin: 0px;
    width: 95%;
  }
  .item ul {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    padding: 0px;
    margin: 0px;
  }
