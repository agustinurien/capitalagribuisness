---
import Layout from "../layouts/Layout.astro";
import NoticiaContainer from "../components/noticiasContainer/NoticiaContainer";
---

<Layout>
  <div class="seccionNoticias">
    <h1>NOTICIAS</h1>
    <div class="noticiasContainer">
      <NoticiaContainer client:load />
    </div>
  </div>

  <style>
    h1 {
      background-color: rgb(255, 255, 255);
      width: 70%;
      color: #000;
      font-size: 2rem;
      text-align: center;
      margin: 0px;

      margin-top: 50px;
      padding: 40px 0px;
      z-index: 1;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }
    .seccionNoticias {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 90vh;
      background-color: rgb(234, 234, 234);
    }
    .noticiasContainer {
      background-color: rgb(255, 255, 255);
      width: 70%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      overflow-y: auto;
      padding: 40px;
      box-sizing: border-box;
    }
    @media  screen and (max-width: 1052px) {
      h1 {
      width: 90%;
    }
    .noticiasContainer {
      
      width: 90%;
    }
  }
  </style>
</Layout>
